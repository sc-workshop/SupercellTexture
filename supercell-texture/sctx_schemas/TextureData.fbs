namespace sc.texture.SCTX;

table StreamingTextureDescriptor
{
    pixel_type: uint;
    width: ushort;
    height: ushort;
    data: [ubyte];
}

table TextureVariants
{
    streaming_id: [int];
    streaming_textures: [StreamingTextureDescriptor]; 
}

table TextureData
{
    unk1: int = 0;
    pixel_type: uint;
    width: ushort;
    height: ushort;
    levels_count: ubyte = 1;
    unk3: int = 0;
    unk4: int = 0;
    texture_length: int;
    unk5: int = 0;
    unk6: int = 0;
    variants: TextureVariants;
}

file_identifier "SCTX";
file_extension "sctx";
root_type TextureData;
